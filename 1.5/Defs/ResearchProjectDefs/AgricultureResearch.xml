        <generalRules>
            <rulesStrings>
                <li>subject->agriculture</li>
                <li>subject->horticulture</li>
                <li>subject->farming</li>
                <li>subject->botany</li>

                <!-- TODO -->
                <li>subject_story->lived on a distant rimworld that had lost the secrets of technology</li>
